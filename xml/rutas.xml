      <longitud>-15.579226637855905</longitud>
      <latitud>11.912540972467166</latitud>
      <altitud unidades="metros">0.29</altitud>
    </coordenadas_inicio>
    <referencias_bibliografia>
      <referencia>https://pt.wikipedia.org/wiki/Pontif%C3%ADcio_Instituto_para_as_Miss%C3%B5es_Estrangeiras</referencia>
